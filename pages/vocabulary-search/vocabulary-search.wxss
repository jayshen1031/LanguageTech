/* pages/vocabulary-search/vocabulary-search.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
}

.clear-btn {
  padding: 10rpx;
  color: #999;
}

.search-btn, .filter-btn {
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #4A90E2;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-left: 10rpx;
}

.filter-btn {
  background: #fff;
  color: #4A90E2;
  border: 2rpx solid #4A90E2;
}

/* 筛选器 */
.filters {
  background: #fff;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
}

.filter-group {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.filter-group:last-child {
  margin-bottom: 0;
}

.filter-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
}

.picker {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.arrow {
  color: #999;
  font-size: 24rpx;
}

/* 统计信息 */
.stats-bar {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 20rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
}

.stats-text {
  font-size: 24rpx;
  color: #999;
}

/* 词汇列表 */
.vocabulary-list {
  flex: 1;
  padding: 20rpx;
}

.vocabulary-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.item-main {
  display: flex;
  align-items: baseline;
  gap: 20rpx;
}

.word {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.reading {
  font-size: 28rpx;
  color: #666;
}

.item-tags {
  display: flex;
  gap: 10rpx;
}

.tag {
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
}

.pos-tag {
  background: #e3f2fd;
  color: #1976d2;
}

.freq-tag {
  background: #fff3e0;
  color: #f57c00;
}

/* 含义 */
.item-meanings {
  padding: 15rpx 0;
}

.meaning {
  display: block;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

/* 操作按钮 */
.item-actions {
  display: flex;
  gap: 20rpx;
  padding-top: 15rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 26rpx;
  border: none;
}

.play-btn {
  background: #f5f5f5;
  color: #666;
}

.add-btn {
  background: #4A90E2;
  color: #fff;
}

.remove-btn {
  background: #f0f0f0;
  color: #999;
}

/* 详细信息 */
.item-detail {
  padding-top: 20rpx;
  margin-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.detail-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
  display: block;
}

.examples {
  margin-bottom: 20rpx;
}

.example {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.example-text {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.play-example-btn {
  padding: 10rpx;
  background: transparent;
  border: none;
  color: #4A90E2;
}

.tags {
  margin-bottom: 20rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 10rpx;
}

.meta-info {
  display: flex;
  gap: 30rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #999;
}

/* 加载状态 */
.loading, .no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 26rpx;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
}

/* 批量操作栏 */
.batch-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
}

.batch-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #4A90E2;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 30rpx;
}