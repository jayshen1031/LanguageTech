/* 用户管理页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 无权限状态 */
.no-permission {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
}

.no-permission-text {
  color: #666;
  font-size: 32rpx;
}

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, #4A90E2, #357ABD);
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  color: white;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.admin-info {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 统计卡片区域 */
.stats-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.stat-card {
  flex: 1;
  background: white;
  padding: 30rpx 20rpx;
  border-radius: 16rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.stat-card.pending {
  border-left: 6rpx solid #ff9500;
}

.stat-card.approved {
  border-left: 6rpx solid #30d158;
}

.stat-card.rejected {
  border-left: 6rpx solid #ff453a;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 操作按钮区域 */
.actions-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.action-btn.primary {
  background: #4A90E2;
  color: white;
}

.action-btn.secondary {
  background: #ff9500;
  color: white;
}

.action-btn.tertiary {
  background: #f0f0f0;
  color: #333;
}

/* 筛选器 */
.filter-section {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.filter-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.filter-group {
  display: flex;
  gap: 30rpx;
}

.filter-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 26rpx;
  color: #666;
}

/* 列表区域 */
.list-section {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.empty-state {
  padding: 80rpx;
  text-align: center;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

/* 申请项目 */
.registration-item {
  border-bottom: 1rpx solid #f0f0f0;
  padding: 30rpx;
}

.registration-item:last-child {
  border-bottom: none;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.user-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.submit-time {
  font-size: 24rpx;
  color: #999;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
}

.status-badge.status-pending {
  background: #ff9500;
}

.status-badge.status-approved {
  background: #30d158;
}

.status-badge.status-rejected {
  background: #ff453a;
}

/* 申请内容 */
.item-content {
  margin-bottom: 20rpx;
}

.profile-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-item {
  font-size: 26rpx;
  color: #666;
}

/* 操作按钮 */
.item-actions {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.detail-btn,
.approve-btn,
.reject-btn,
.delete-btn {
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  border: none;
}

.detail-btn {
  background: #f0f0f0;
  color: #333;
}

.approve-btn {
  background: #30d158;
  color: white;
}

.reject-btn {
  background: #ff453a;
  color: white;
}

.delete-btn {
  background: #ff6b6b;
  color: white;
}

.approval-actions {
  display: flex;
  gap: 10rpx;
}