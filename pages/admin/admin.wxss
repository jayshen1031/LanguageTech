.container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.admin-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.admin-content {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.1);
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
}

.admin-btn {
  width: 100%;
  height: 88rpx;
  margin-bottom: 20rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  background: #f0f0f0;
  color: #333;
}

.admin-btn.primary {
  background: #4A90E2;
  color: #fff;
}

.message {
  padding: 20rpx;
  background: #e8f5e9;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.message text {
  color: #2e7d32;
  font-size: 28rpx;
}

.tips {
  margin-top: 40rpx;
  padding: 30rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
}

.tips-title {
  display: block;
  font-weight: 500;
  margin-bottom: 20rpx;
  color: #666;
  font-size: 28rpx;
}

.tips text {
  display: block;
  color: #999;
  font-size: 26rpx;
  line-height: 1.6;
  margin-bottom: 10rpx;
}