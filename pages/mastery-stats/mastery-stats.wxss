/* pages/mastery-stats/mastery-stats.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 顶部导航 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left, .header-right {
  width: 80rpx;
}

.back-btn {
  font-size: 36rpx;
  color: #4a90e2;
  padding: 8rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 统计内容 */
.stats-content {
  padding: 20rpx;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 26rpx;
  color: #666;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.filter-item.active {
  background-color: #4a90e2;
  color: #fff;
}

/* 总体概览 */
.overview-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.overview-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.overview-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.overview-item {
  text-align: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.overview-number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #4a90e2;
  margin-bottom: 8rpx;
}

.overview-label {
  font-size: 24rpx;
  color: #666;
}

/* 分类统计 */
.category-stats {
  margin-bottom: 20rpx;
}

.stat-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.stat-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.stat-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.stat-total {
  font-size: 24rpx;
  color: #666;
}

/* 进度条 */
.stat-bar {
  height: 24rpx;
  background-color: #f0f0f0;
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
  margin-bottom: 16rpx;
}

.bar-segment {
  height: 100%;
  transition: width 0.3s ease;
}

.bar-segment.mastered { background-color: #4caf50; }
.bar-segment.partial { background-color: #2196f3; }
.bar-segment.unfamiliar { background-color: #ff9800; }
.bar-segment.unseen { background-color: #e0e0e0; }

/* 图例 */
.stat-legend {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #666;
  flex: 1;
  min-width: 120rpx;
}

.legend-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.legend-item.mastered .legend-dot { background-color: #4caf50; }
.legend-item.partial .legend-dot { background-color: #2196f3; }
.legend-item.unfamiliar .legend-dot { background-color: #ff9800; }
.legend-item.unseen .legend-dot { background-color: #e0e0e0; }

/* 学习建议 */
.suggestion-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.suggestion-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  text-align: center;
}

.suggestion-content {
  space-y: 12rpx;
}

.suggestion-item {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-item.success {
  background-color: rgba(76, 175, 80, 0.1);
  border-radius: 8rpx;
  padding: 12rpx;
}

.suggestion-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.suggestion-text {
  font-size: 26rpx;
  color: #555;
  flex: 1;
}

/* 进度环形图 */
.progress-circle-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.progress-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.progress-circle {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
}

.circle-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  border: 16rpx solid #f0f0f0;
  border-radius: 50%;
}

.circle-progress {
  position: absolute;
  width: 100%;
  height: 100%;
  border: 16rpx solid #4a90e2;
  border-radius: 50%;
  border-left-color: transparent;
  border-bottom-color: transparent;
  transform: rotate(-90deg);
  stroke-dasharray: 0, 314;
  transition: stroke-dasharray 0.3s ease;
}

.circle-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.progress-percent {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #4a90e2;
  margin-bottom: 4rpx;
}

.progress-label {
  font-size: 22rpx;
  color: #666;
}