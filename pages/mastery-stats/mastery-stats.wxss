/* pages/mastery-stats/mastery-stats.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 顶部导航 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left, .header-right {
  width: 80rpx;
}

.back-btn {
  font-size: 36rpx;
  color: #4a90e2;
  padding: 8rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 模式切换 */
.mode-switch {
  display: flex;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.switch-item {
  flex: 1;
  padding: 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  background-color: #f8f9fa;
  transition: all 0.3s ease;
}

.switch-item.active {
  background-color: #4a90e2;
  color: #fff;
  font-weight: bold;
}

/* 学习行为统计样式 */
.behavior-stats-content {
  padding: 0 20rpx;
}

/* 行为概览卡片 */
.behavior-overview-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.behavior-overview-card .overview-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.behavior-overview-card .overview-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.behavior-overview-card .overview-item {
  text-align: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.behavior-overview-card .overview-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #4a90e2;
  margin-bottom: 8rpx;
}

.behavior-overview-card .overview-label {
  font-size: 24rpx;
  color: #666;
}

/* 学习习惯卡片 */
.study-habits-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.habits-grid {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.habit-item {
  text-align: center;
  padding: 20rpx;
  background-color: #f0f7ff;
  border-radius: 12rpx;
  min-width: 200rpx;
}

.habit-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.habit-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #4a90e2;
}

/* 内容分解卡片 */
.content-breakdown-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.breakdown-item {
  margin-bottom: 25rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.breakdown-item:last-child {
  margin-bottom: 0;
}

.breakdown-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.breakdown-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.breakdown-total {
  font-size: 24rpx;
  color: #666;
}

.breakdown-details {
  display: flex;
  justify-content: space-around;
}

.detail-item {
  font-size: 24rpx;
  color: #4a90e2;
  padding: 8rpx 16rpx;
  background-color: #e7f3ff;
  border-radius: 8rpx;
}

/* 每日活动图表 */
.daily-activity-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.activity-chart {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 200rpx;
  margin-top: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.activity-day {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  margin: 0 2rpx;
}

.activity-bar {
  width: 20rpx;
  min-height: 8rpx;
  background-color: #4a90e2;
  border-radius: 4rpx 4rpx 0 0;
  margin-bottom: 10rpx;
}

.activity-date {
  font-size: 20rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.activity-count {
  font-size: 20rpx;
  color: #666;
}

/* 复习统计卡片 */
.review-stats-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.review-overview {
  display: flex;
  justify-content: space-around;
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.review-item {
  text-align: center;
}

.review-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.review-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b35;
}

.review-patterns {
  margin-top: 25rpx;
  padding: 20rpx;
  background-color: #f0f7ff;
  border-radius: 12rpx;
}

.pattern-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.time-patterns {
  display: flex;
  justify-content: space-around;
}

.time-item {
  text-align: center;
  padding: 15rpx;
  background-color: #fff;
  border-radius: 8rpx;
  min-width: 120rpx;
}

.time-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.time-count {
  font-size: 28rpx;
  font-weight: bold;
  color: #4a90e2;
}

.content-patterns {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fff5f5;
  border-radius: 12rpx;
}

.content-types {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  gap: 15rpx;
}

.content-type-item {
  text-align: center;
  padding: 15rpx;
  background-color: #fff;
  border-radius: 8rpx;
  min-width: 120rpx;
}

.content-type-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.content-type-count {
  font-size: 28rpx;
  font-weight: bold;
  color: #e91e63;
}

/* 行为建议卡片 */
.behavior-suggestion-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.behavior-suggestion-card .suggestion-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.behavior-suggestion-card .suggestion-content {
  padding: 0;
}

.behavior-suggestion-card .suggestion-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 15rpx;
  background-color: #fff7e6;
  border-radius: 12rpx;
  border-left: 6rpx solid #ffa726;
}

.behavior-suggestion-card .suggestion-item.success {
  background-color: #e8f5e8;
  border-left-color: #4caf50;
}

.behavior-suggestion-card .suggestion-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.behavior-suggestion-card .suggestion-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

/* 统计内容 */
.stats-content {
  padding: 20rpx;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 26rpx;
  color: #666;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.filter-item.active {
  background-color: #4a90e2;
  color: #fff;
}

/* 总体概览 */
.overview-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.overview-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.overview-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.overview-item {
  text-align: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.overview-number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #4a90e2;
  margin-bottom: 8rpx;
}

.overview-label {
  font-size: 24rpx;
  color: #666;
}

/* 分类统计 */
.category-stats {
  margin-bottom: 20rpx;
}

.stat-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.stat-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.stat-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.stat-total {
  font-size: 24rpx;
  color: #666;
}

/* 进度条 */
.stat-bar {
  height: 24rpx;
  background-color: #f0f0f0;
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
  margin-bottom: 16rpx;
}

.bar-segment {
  height: 100%;
  transition: width 0.3s ease;
}

.bar-segment.mastered { background-color: #4caf50; }
.bar-segment.partial { background-color: #2196f3; }
.bar-segment.unfamiliar { background-color: #ff9800; }
.bar-segment.unseen { background-color: #e0e0e0; }

/* 图例 */
.stat-legend {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #666;
  flex: 1;
  min-width: 120rpx;
}

.legend-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.legend-item.mastered .legend-dot { background-color: #4caf50; }
.legend-item.partial .legend-dot { background-color: #2196f3; }
.legend-item.unfamiliar .legend-dot { background-color: #ff9800; }
.legend-item.unseen .legend-dot { background-color: #e0e0e0; }

/* 学习建议 */
.suggestion-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.suggestion-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  text-align: center;
}

.suggestion-content {
  space-y: 12rpx;
}

.suggestion-item {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-item.success {
  background-color: rgba(76, 175, 80, 0.1);
  border-radius: 8rpx;
  padding: 12rpx;
}

.suggestion-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.suggestion-text {
  font-size: 26rpx;
  color: #555;
  flex: 1;
}

/* 进度环形图 */
.progress-circle-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.progress-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.progress-circle {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
}

.circle-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  border: 16rpx solid #f0f0f0;
  border-radius: 50%;
}

.circle-progress {
  position: absolute;
  width: 100%;
  height: 100%;
  border: 16rpx solid #4a90e2;
  border-radius: 50%;
  border-left-color: transparent;
  border-bottom-color: transparent;
  transform: rotate(-90deg);
  stroke-dasharray: 0, 314;
  transition: stroke-dasharray 0.3s ease;
}

.circle-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.progress-percent {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #4a90e2;
  margin-bottom: 4rpx;
}

.progress-label {
  font-size: 22rpx;
  color: #666;
}