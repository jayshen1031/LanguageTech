/* pages/parser-history/parser-history.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  background-color: #fff;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 32rpx;
  transition: all 0.3s;
}

.filter-item.active {
  background-color: #4a90e2;
  color: #fff;
  font-weight: bold;
}

/* 功能按钮栏 */
.function-bar {
  background-color: #fff;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  gap: 16rpx;
}

.btn-function {
  flex: 1;
  height: 80rpx;
  background-color: #f8f9fa;
  color: #666;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s;
}

.btn-function.primary {
  background: linear-gradient(135deg, #4a90e2 0%, #357abd 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
}

.btn-function:active {
  transform: scale(0.98);
}

.function-icon {
  font-size: 28rpx;
}

/* 历史列表 */
.history-list {
  padding: 20rpx;
}

.history-item {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.history-item::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(90deg, #4a90e2, #667eea, #764ba2);
}

.history-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 25rpx rgba(0, 0, 0, 0.12);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.item-time {
  font-size: 24rpx;
  color: #999;
}

.item-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  padding: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: background-color 0.2s;
}

.action-btn:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.action-btn.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
}

.action-icon.disabled {
  opacity: 0.5;
}

.item-content {
  padding: 16rpx 0;
}

/* 标题样式 */
.item-title {
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8rpx 12rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 12rpx;
  border-left: 4rpx solid #4a90e2;
}

.title-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
  flex: 1;
  line-height: 1.4;
}

.edit-title-btn {
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  color: #4a90e2;
  background: rgba(74, 144, 226, 0.1);
  border-radius: 16rpx;
  margin-left: 12rpx;
  transition: all 0.3s ease;
}

.edit-title-btn:active {
  background: rgba(74, 144, 226, 0.2);
  transform: scale(0.95);
}

/* 添加标题按钮 */
.add-title-row {
  margin-bottom: 12rpx;
}

.add-title-btn {
  font-size: 24rpx;
  color: #6c757d;
  padding: 8rpx 16rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  border: 2rpx dashed #dee2e6;
  display: inline-block;
  transition: all 0.3s ease;
}

.add-title-btn:active {
  background: #e9ecef;
  border-color: #4a90e2;
  color: #4a90e2;
  transform: scale(0.98);
}

.item-preview {
  font-size: 28rpx;
  color: #495057;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 12rpx 16rpx;
  background: rgba(248, 249, 250, 0.6);
  border-radius: 12rpx;
  border-left: 3rpx solid #dee2e6;
  position: relative;
}

.item-preview::before {
  content: '"';
  position: absolute;
  top: -4rpx;
  left: 8rpx;
  font-size: 36rpx;
  color: #dee2e6;
  font-family: serif;
}

.item-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
  margin-top: 8rpx;
}

/* 分类标签区域 */
.category-section {
  display: flex;
  align-items: center;
  margin-left: auto;
}

.category-badge-container {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.category-badge {
  font-size: 20rpx;
  color: #fff;
  padding: 6rpx 12rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  border-radius: 20rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.3);
}

.edit-category-btn {
  font-size: 18rpx;
  padding: 4rpx;
  opacity: 0.7;
  transition: all 0.3s ease;
}

.edit-category-btn:active {
  opacity: 1;
  transform: scale(1.1);
}

.add-category-btn {
  font-size: 18rpx;
  color: #6c757d;
  padding: 6rpx 12rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 1rpx dashed #dee2e6;
  transition: all 0.3s ease;
  min-width: fit-content;
}

.add-category-btn:active {
  background: #e9ecef;
  border-color: #4a90e2;
  color: #4a90e2;
  transform: scale(0.98);
}

.info-tag {
  font-size: 20rpx;
  color: #fff;
  padding: 6rpx 12rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
  min-width: fit-content;
}

.info-count {
  font-size: 20rpx;
  color: #6c757d;
  padding: 6rpx 12rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  border: 1rpx solid #e9ecef;
  min-width: fit-content;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-button {
  background-color: #4a90e2;
  color: #fff;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 加载状态 */
.loading-more,
.no-more {
  text-align: center;
  padding: 32rpx;
  font-size: 24rpx;
  color: #999;
}

/* 维护按钮 */
.maintenance-btn {
  position: fixed;
  right: 30rpx;
  bottom: 150rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 99;
}

.maintenance-icon {
  font-size: 36rpx;
}

/* 图标样式 */
.action-icon[src*="star"] {
  filter: none;
}

.action-icon[src*="star-filled"] {
  filter: none;
}

.action-icon[src*="delete"] {
  filter: none;
  opacity: 0.7;
}

.action-icon[src*="delete"]:active {
  opacity: 1;
  transform: scale(0.95);
}

/* 删除按钮文本样式 */
.delete-btn {
  background-color: #ff4444;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.delete-btn:active {
  background-color: #dd3333;
}

.delete-btn.disabled {
  background-color: #ccc;
  opacity: 0.5;
  pointer-events: none;
}

.delete-text {
  color: #fff;
  font-size: 24rpx;
  font-weight: 500;
}

.delete-text.disabled {
  color: #999;
}

/* 分类筛选样式 */
.category-filter {
  padding: 20rpx 30rpx;
  background: #f8f9fa;
  border-bottom: 1rpx solid #e0e0e0;
}

.filter-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
}

.category-scroll {
  width: 100%;
}

.category-tags {
  display: flex;
  gap: 10rpx;
  white-space: nowrap;
}

.category-tag {
  padding: 8rpx 16rpx;
  background: #fff;
  border: 1rpx solid #ddd;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.category-tag.active {
  background: #4a90e2;
  color: white;
  border-color: #4a90e2;
}

.category-tag:active {
  transform: scale(0.95);
}

/* 分类标签徽章 */
.category-badge {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  color: white;
  padding: 6rpx 16rpx;
  border-radius: 24rpx;
  font-size: 18rpx;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.3);
  min-width: fit-content;
  text-align: center;
  letter-spacing: 1rpx;
  position: relative;
  overflow: hidden;
}

.category-badge::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.category-badge:active::before {
  left: 100%;
}

/* 分类标签编辑区域 */
.category-section {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.category-badge-container {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.edit-category-btn {
  font-size: 20rpx;
  color: #4a90e2;
  background: rgba(74, 144, 226, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.edit-category-btn:active {
  background: rgba(74, 144, 226, 0.2);
  transform: scale(0.95);
}

.add-category-btn {
  font-size: 18rpx;
  color: #6c757d;
  padding: 6rpx 12rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 1rpx dashed #dee2e6;
  transition: all 0.3s ease;
  min-width: fit-content;
}

.add-category-btn:active {
  background: #e9ecef;
  border-color: #4a90e2;
  color: #4a90e2;
  transform: scale(0.98);
}