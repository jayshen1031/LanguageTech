.container {
  padding: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(180deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 100%);
  pointer-events: none;
}

/* 进度指示器 */
.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 30rpx 30rpx;
  padding: 24rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border-radius: 20rpx;
  backdrop-filter: blur(10px);
}

.progress-text {
  font-size: 30rpx;
  color: #4A90E2;
  font-weight: 500;
}

.progress-dots {
  display: flex;
  gap: 8rpx;
}

.dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.3);
  transition: all 0.3s;
}

.dot.active {
  background-color: #fff;
  transform: scale(1.2);
}

/* 单词卡片 */
.word-card-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.word-card {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  width: calc(100% - 80rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
  position: relative;
  backdrop-filter: blur(20px);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.word-main {
  text-align: center;
  margin-bottom: 40rpx;
}

.word-text {
  font-size: 64rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.word-kana {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.word-kana text {
  font-size: 32rpx;
  color: #666;
}

.romaji {
  font-size: 28rpx;
  color: #999;
}

.divider {
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #e0e0e0, transparent);
  margin: 30rpx 0;
}

.word-meaning {
  text-align: center;
  margin: 40rpx 0;
}

.meaning-text {
  font-size: 36rpx;
  color: #4A90E2;
  font-weight: 500;
  display: block;
  margin-bottom: 16rpx;
}

.word-meta {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin-top: 16rpx;
}

.word-type {
  background: #e8f5e9;
  color: #2e7d32;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.word-level {
  background: #e3f2fd;
  color: #1565c0;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.word-source {
  background: #fff3e0;
  color: #e65100;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* 例句部分 */
.example-section {
  margin-top: 40rpx;
  padding-top: 40rpx;
  border-top: 1rpx solid #eee;
}

.example-item {
  margin-bottom: 20rpx;
}

.example-jp {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

.example-cn {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 语法信息部分 */
.grammar-section {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.grammar-item {
  margin-bottom: 20rpx;
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #ff9800;
}

.grammar-label {
  display: block;
  font-size: 24rpx;
  color: #ff9800;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.grammar-content {
  display: block;
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  white-space: pre-wrap;
}

/* 音频提示 */
.audio-hint {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  opacity: 0.6;
}

.speaker-icon {
  width: 24rpx;
  height: 24rpx;
}

.audio-hint text {
  font-size: 20rpx;
  color: #999;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
}

.btn-action {
  flex: 1;
  height: 90rpx;
  background: #fff;
  border: 2rpx solid #e0e0e0;
  border-radius: 45rpx;
  font-size: 30rpx;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.btn-action:active {
  background: #f5f5f5;
  transform: scale(0.98);
}

.btn-action .added {
  color: #4A90E2;
}

/* 掌握状态按钮 */
.master-buttons {
  display: flex;
  gap: 20rpx;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.btn-master {
  flex: 1;
  height: 140rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  border: none;
  transition: transform 0.2s;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.btn-master:active {
  transform: scale(0.95);
}

.btn-master .icon {
  font-size: 36rpx;
}

.btn-master text:last-child {
  font-size: 26rpx;
  color: #fff;
  font-weight: 500;
}

.btn-master.forgot {
  background: #FF6B6B;
}

.btn-master.fuzzy {
  background: #FFA94D;
}

.btn-master.mastered {
  background: #51CF66;
}

/* 完成弹窗 */
.complete-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: #fff;
  border-radius: 20rpx;
  padding: 60rpx;
  width: 80%;
  text-align: center;
}

.complete-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.complete-desc {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 40rpx;
}

.complete-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.complete-stats .stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.complete-stats .stat-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.complete-stats .stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 学习设置样式 */
.setup-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.setup-content {
  background: #fff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  width: 600rpx;
  text-align: center;
}

.setup-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  display: block;
}

.word-count-options {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.count-option {
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: #333;
  border: none;
  transition: all 0.3s;
}

.count-option:active {
  background: #667eea;
  color: #fff;
  transform: scale(0.95);
}

.setup-tip {
  font-size: 26rpx;
  color: #999;
}

/* 翻页按钮 */
.nav-buttons {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 40rpx;
  gap: 20rpx;
}

.btn-nav {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  background: #f5f5f5;
  color: #333;
  font-size: 30rpx;
  border-radius: 40rpx;
  border: none;
  transition: all 0.3s;
}

.btn-nav:active:not([disabled]) {
  background: #e0e0e0;
  transform: scale(0.95);
}

.btn-nav[disabled] {
  opacity: 0.4;
  color: #999;
}

/* 例句标题 */
.example-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
  font-weight: 500;
}

/* 无例句提示 */
.no-example-hint {
  color: #999;
  font-size: 26rpx;
  font-style: italic;
}

/* 来源标签筛选 */
.source-filter {
  margin-top: 30rpx;
  padding: 20rpx 0;
}

.filter-label {
  display: block;
  color: #666;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  padding-left: 10rpx;
  font-weight: 500;
}

.tag-scroll {
  white-space: nowrap;
  width: 100%;
}

.tag-options {
  display: inline-flex;
  gap: 12rpx;
  padding: 0 10rpx;
}

.tag-option {
  display: inline-block;
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.15);
  border: 2rpx solid rgba(102, 126, 234, 0.3);
  border-radius: 30rpx;
  color: #667eea;
  font-size: 26rpx;
  transition: all 0.3s;
  white-space: nowrap;
}

.tag-option.active {
  background: #667eea;
  color: white;
  border-color: #667eea;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transform: scale(1.05);
}

.tag-option:active {
  transform: scale(0.95);
}

/* 自动开始选项 */
.auto-start-option {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  gap: 16rpx;
}

.auto-start-option text {
  color: #666;
  font-size: 28rpx;
}

/* 完成页面按钮组 */
.complete-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
  justify-content: center;
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.2);
  color: #4A90E2;
  border: 2rpx solid #4A90E2;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  transition: all 0.3s;
}

.btn-secondary:active {
  background: rgba(74, 144, 226, 0.1);
  transform: scale(0.95);
}

/* 添加例句提示 */
.add-example-hint {
  margin-top: 16rpx;
  padding: 16rpx;
  background: rgba(74, 144, 226, 0.1);
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.link-text {
  color: #4A90E2;
  text-decoration: underline;
  margin: 0 8rpx;
}

/* 例句罗马音 */
.example-romaji {
  color: #999;
  font-size: 24rpx;
  font-style: italic;
  margin: 8rpx 0;
  display: block;
}

/* 例句结构 */
.example-structure {
  margin: 12rpx 0;
  padding: 12rpx;
  background: rgba(116, 75, 162, 0.1);
  border-radius: 8rpx;
}

.structure-label {
  color: #764ba2;
  font-size: 24rpx;
  font-weight: 500;
}

.structure-content {
  color: #666;
  font-size: 24rpx;
  margin-left: 8rpx;
}

/* 例句分析 */
.example-analysis {
  margin: 12rpx 0;
  padding: 12rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 8rpx;
}

.analysis-label {
  color: #667eea;
  font-size: 24rpx;
  font-weight: 500;
}

.analysis-content {
  color: #666;
  font-size: 24rpx;
  margin-left: 8rpx;
  line-height: 1.4;
}
/* 例句出处 */
.example-source {
  margin-top: 12rpx;
  padding: 8rpx 12rpx;
  background: rgba(255, 152, 0, 0.05);
  border-radius: 6rpx;
}

.source-label {
  color: #ff9800;
  font-size: 22rpx;
}

/* 学习进度和确认按钮 */
.learning-progress-section {
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.learning-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.learning-stats .stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.learning-stats .stat-icon {
  font-size: 40rpx;
}

.learning-stats .stat-text {
  font-size: 26rpx;
  font-weight: 500;
  color: white;
  text-align: center;
}

.learning-action-buttons {
  display: flex;
  gap: 20rpx;
}

.btn-continue {
  flex: 1;
  height: 120rpx;
  background: linear-gradient(135deg, #4A90E2, #5BA3F5);
  color: white;
  border: none;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  box-shadow: 0 6rpx 20rpx rgba(74, 144, 226, 0.4);
  transition: all 0.3s;
}

.btn-continue:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
}

.btn-confirm-master {
  flex: 1;
  height: 120rpx;
  border: none;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.3s;
}

.btn-confirm-master.active {
  background: linear-gradient(135deg, #52c41a, #73d13d);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(82, 196, 26, 0.4);
}

.btn-confirm-master.active:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.3);
}

.btn-confirm-master.disabled {
  background: #f0f0f0;
  color: #bbb;
  box-shadow: none;
}

.btn-icon {
  font-size: 36rpx;
}

/* 已掌握状态容器 */
.mastered-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.mastered-status {
  width: 100%;
  padding: 30rpx;
  background: linear-gradient(135deg, #52c41a, #73d13d);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 6rpx 20rpx rgba(82, 196, 26, 0.4);
}

.mastered-icon {
  font-size: 52rpx;
}

.mastered-text {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

.mastered-count {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.btn-reset-mastery {
  width: 100%;
  height: 80rpx;
  background: #ff9800;
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 152, 0, 0.3);
  transition: all 0.3s;
}

.btn-reset-mastery:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 10rpx rgba(255, 152, 0, 0.2);
}

/* 主界面来源标签筛选 */
.main-source-filter {
  padding: 0 30rpx 20rpx;
}

.tag-scroll-main {
  white-space: nowrap;
  width: 100%;
}

.tag-options-main {
  display: inline-flex;
  gap: 12rpx;
}

.tag-option-main {
  display: inline-block;
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 30rpx;
  color: white;
  font-size: 26rpx;
  transition: all 0.3s;
  white-space: nowrap;
}

.tag-option-main.active {
  background: white;
  color: #667eea;
  border-color: white;
  box-shadow: 0 4rpx 12rpx rgba(255, 255, 255, 0.3);
  transform: scale(1.05);
}

.tag-option-main:active {
  transform: scale(0.95);
}
