.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 进度指示器 */
.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.progress-text {
  font-size: 28rpx;
  color: #666;
}

.progress-dots {
  display: flex;
  gap: 8rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #e0e0e0;
  transition: background-color 0.3s;
}

.dot.active {
  background-color: #4A90E2;
}

/* 单词卡片 */
.word-card-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.word-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  width: 90%;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.word-main {
  text-align: center;
  margin-bottom: 40rpx;
}

.word-text {
  font-size: 64rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.word-kana {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.word-kana text {
  font-size: 32rpx;
  color: #666;
}

.romaji {
  font-size: 28rpx;
  color: #999;
}

.word-meaning {
  text-align: center;
  margin: 40rpx 0;
}

.meaning-text {
  font-size: 36rpx;
  color: #4A90E2;
  font-weight: 500;
  display: block;
  margin-bottom: 16rpx;
}

.word-meta {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin-top: 16rpx;
}

.word-type {
  background: #e8f5e9;
  color: #2e7d32;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.word-level {
  background: #e3f2fd;
  color: #1565c0;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 例句部分 */
.example-section {
  margin-top: 40rpx;
  padding-top: 40rpx;
  border-top: 1rpx solid #eee;
}

.example-item {
  margin-bottom: 20rpx;
}

.example-jp {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

.example-cn {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 音频提示 */
.audio-hint {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  opacity: 0.6;
}

.speaker-icon {
  width: 24rpx;
  height: 24rpx;
}

.audio-hint text {
  font-size: 20rpx;
  color: #999;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}

.btn-action {
  flex: 1;
  height: 80rpx;
  background: #fff;
  border: 2rpx solid #e0e0e0;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-action .added {
  color: #4A90E2;
}

/* 掌握状态按钮 */
.master-buttons {
  display: flex;
  gap: 20rpx;
  padding: 0 20rpx;
  margin-bottom: 40rpx;
}

.btn-master {
  flex: 1;
  height: 120rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  border: none;
  transition: transform 0.2s;
}

.btn-master:active {
  transform: scale(0.95);
}

.btn-master .icon {
  font-size: 36rpx;
}

.btn-master text:last-child {
  font-size: 24rpx;
  color: #fff;
}

.btn-master.forgot {
  background: #FF6B6B;
}

.btn-master.fuzzy {
  background: #FFA94D;
}

.btn-master.mastered {
  background: #51CF66;
}

/* 完成弹窗 */
.complete-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: #fff;
  border-radius: 20rpx;
  padding: 60rpx;
  width: 80%;
  text-align: center;
}

.complete-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.complete-desc {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 40rpx;
}

.complete-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.complete-stats .stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.complete-stats .stat-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.complete-stats .stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}