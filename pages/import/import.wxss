.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 上传区域 */
.upload-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.upload-btn, .template-btn {
  flex: 1;
  height: 120rpx;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.upload-btn {
  background: #4A90E2;
  color: #fff;
}

.template-btn {
  background: #fff;
  color: #4A90E2;
  border: 2rpx solid #4A90E2;
}

.icon {
  font-size: 40rpx;
}

/* 文件信息 */
.file-info {
  background: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.label {
  color: #666;
  font-size: 28rpx;
}

.value {
  font-size: 32rpx;
  font-weight: bold;
  color: #4A90E2;
}

/* 预览区域 */
.preview-section {
  background: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.preview-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.preview-item {
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
}

.word-info {
  display: flex;
  gap: 20rpx;
  align-items: center;
  margin-bottom: 10rpx;
}

.word {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.kana {
  font-size: 26rpx;
  color: #666;
}

.meaning {
  font-size: 28rpx;
  color: #4A90E2;
  margin-left: auto;
}

.word-meta {
  display: flex;
  gap: 20rpx;
}

.type, .level {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  background: #e8f5e9;
  color: #2e7d32;
}

/* 导入按钮 */
.action-section {
  margin-bottom: 40rpx;
}

.import-btn {
  width: 100%;
  height: 88rpx;
  background: #4A90E2;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.import-btn[disabled] {
  opacity: 0.6;
}

/* 进度条 */
.progress-bar {
  height: 20rpx;
  background: #e0e0e0;
  border-radius: 10rpx;
  position: relative;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #4A90E2;
  transition: width 0.3s;
}

.progress-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 20rpx;
  color: #666;
}

/* 帮助说明 */
.help-section {
  background: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.help-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.help-content text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 格式示例 */
.example-section {
  background: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
}

.example-tabs {
  display: flex;
  gap: 30rpx;
  margin-bottom: 20rpx;
}

.tab {
  font-size: 28rpx;
  color: #999;
  padding-bottom: 10rpx;
  border-bottom: 4rpx solid transparent;
}

.tab.active {
  color: #4A90E2;
  border-bottom-color: #4A90E2;
}

.example-content {
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 10rpx;
  overflow-x: auto;
}

.code {
  font-size: 24rpx;
  color: #333;
  font-family: monospace;
  white-space: pre;
}