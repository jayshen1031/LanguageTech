<view class="container">
  <!-- 用户信息 -->
  <view class="user-section">
    <view class="user-info">
      <view class="avatar-placeholder"></view>
      <view class="user-details">
        <text class="nickname">语言学习者</text>
        <text class="study-days">已学习 0 天</text>
      </view>
    </view>
  </view>

  <!-- 缓存管理 -->
  <view class="cache-section">
    <view class="section-title">缓存管理</view>
    <view class="cache-info">
      <view class="cache-item">
        <text class="cache-label">音频缓存文件：</text>
        <text class="cache-value">{{cacheStats.fileCount}} 个</text>
      </view>
      <view class="cache-item">
        <text class="cache-label">缓存大小：</text>
        <text class="cache-value">{{cacheStats.totalSizeMB}} MB</text>
      </view>
      <button class="clear-cache-btn" bindtap="clearAudioCache">清理音频缓存</button>
    </view>
  </view>
  
  <!-- 管理功能 -->
  <view class="admin-section">
    <view class="section-title">管理功能</view>
    <navigator url="/pages/todo-manage/todo-manage" class="admin-item">
      <text class="admin-label">项目待办管理</text>
      <text class="admin-arrow">›</text>
    </navigator>
  </view>
  
  <!-- 其他功能 -->
  <view class="other-section">
    <text class="tips">更多功能开发中...</text>
  </view>
</view>