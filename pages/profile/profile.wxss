.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息 */
.user-section {
  background: #4A90E2;
  padding: 40rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.avatar-placeholder {
  width: 100rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 32rpx;
  color: #fff;
  margin-bottom: 10rpx;
}

.study-days {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 菜单 */
.menu-section {
  margin-bottom: 30rpx;
}

.menu-btn {
  width: 100%;
  height: 100rpx;
  background: #fff;
  border: none;
  font-size: 32rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.menu-btn::after {
  display: none;
}

.admin-btn {
  background: #FF6B6B;
  color: #fff;
}

.admin-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 其他 */
.other-section {
  text-align: center;
  padding: 40rpx;
}

.tips {
  color: #999;
  font-size: 28rpx;
}