/* 存储调试页面样式 */
.container {
  min-height: 100vh;
  background: #f5f6fa;
  padding: 20rpx;
}

.debug-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, #2196F3 0%, #21CBF3 100%);
  border-radius: 16rpx;
  color: white;
}

.debug-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.debug-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

/* 信息卡片 */
.info-card,
.list-card {
  background: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.card-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

/* 存储信息显示 */
.storage-info {
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 16rpx;
  border-left: 4rpx solid #2196F3;
}

.storage-text {
  font-size: 22rpx;
  color: #333;
  line-height: 1.6;
  font-family: Monaco, Consolas, monospace;
  white-space: pre-line;
  word-break: break-all;
}

/* 注册列表 */
.registration-list {
  display: flex;
  flex-direction: column;
}

.registration-item {
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
  border-left: 4rpx solid #4CAF50;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.item-nickname {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.item-status {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  color: white;
}

.status-pending {
  background: #ff9800;
}

.status-approved {
  background: #4caf50;
}

.status-rejected {
  background: #f44336;
}

.item-details {
  display: flex;
  flex-direction: column;
}

.item-time,
.item-openid {
  font-size: 20rpx;
  color: #666;
  margin-bottom: 4rpx;
  word-break: break-all;
}

/* 操作按钮 */
.action-section {
  margin: 30rpx 0;
}

.action-btn {
  width: 100%;
  height: 70rpx;
  border-radius: 35rpx;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
}

.action-btn.secondary {
  background: linear-gradient(135deg, #2196F3, #1976D2);
  color: white;
}

.action-btn.danger {
  background: linear-gradient(135deg, #f44336, #d32f2f);
  color: white;
}

/* 帮助部分 */
.help-section {
  background: #e3f2fd;
  border-radius: 12rpx;
  padding: 24rpx;
  border-left: 6rpx solid #2196F3;
}

.help-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1976D2;
  margin-bottom: 16rpx;
}

.help-content {
  display: flex;
  flex-direction: column;
}

.help-text {
  font-size: 24rpx;
  color: #1976D2;
  margin-bottom: 10rpx;
  line-height: 1.4;
}