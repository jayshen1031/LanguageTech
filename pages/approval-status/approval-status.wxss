/* 审批状态页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 40rpx 30rpx;
}

/* 状态显示区域 */
.status-section {
  margin-bottom: 40rpx;
}

.status-card {
  background: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.status-icon-wrapper {
  margin-bottom: 30rpx;
}

.status-icon {
  font-size: 120rpx;
  display: block;
}

.status-title {
  font-size: 44rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
}

.status-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  display: block;
  margin-bottom: 30rpx;
}

.user-info-brief {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.user-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.register-time {
  font-size: 24rpx;
  color: #999;
}

/* 信息说明区域 */
.info-section {
  margin-bottom: 40rpx;
}

.info-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.info-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 24rpx;
}

.info-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: block;
  margin-bottom: 12rpx;
  padding-left: 20rpx;
}

.success-animation {
  margin-top: 20rpx;
  text-align: center;
}

.celebrate-icon {
  font-size: 60rpx;
  animation: bounce 1s infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-10rpx);
  }
  60% {
    transform: translateY(-5rpx);
  }
}

/* 操作按钮区域 */
.action-section {
  margin-bottom: 40rpx;
}

.approved-actions,
.common-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.primary-btn,
.secondary-btn,
.outline-btn {
  height: 100rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
}

.primary-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.secondary-btn {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
}

.outline-btn {
  background: transparent;
  color: #667eea;
  border: 2rpx solid #667eea;
}

.btn-icon {
  margin-right: 12rpx;
  font-size: 28rpx;
}

/* 帮助信息区域 */
.help-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.help-tips {
  margin-bottom: 30rpx;
}

.help-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.tip-item {
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.tip-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.tip-question {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.tip-answer {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  display: block;
}

/* 页面底部链接 */
.footer-links {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.link-text {
  font-size: 24rpx;
  color: #667eea;
  text-decoration: underline;
}

.link-divider {
  font-size: 24rpx;
  color: #ccc;
}

/* 状态特定样式 */
.pending-info .info-text {
  color: #f39c12;
}

.approved-info .info-text {
  color: #27ae60;
}

.rejected-info .info-text {
  color: #e74c3c;
}

.suspended-info .info-text {
  color: #e67e22;
}

/* 响应式适配 */
@media (max-width: 320px) {
  .status-icon {
    font-size: 100rpx;
  }
  
  .status-title {
    font-size: 36rpx;
  }
  
  .primary-btn,
  .secondary-btn,
  .outline-btn {
    height: 88rpx;
    font-size: 28rpx;
  }
}