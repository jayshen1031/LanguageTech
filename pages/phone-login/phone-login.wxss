/* 手机号验证码登录页面样式 */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
}

/* 标题区域 */
.login-header {
  text-align: center;
  margin-bottom: 80rpx;
}

.app-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
}

.login-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.welcome-text {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
}

.phone-text {
  display: block;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 步骤区域 */
.step-section {
  background: white;
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.1);
}

/* 手机号显示 */
.phone-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.phone-display {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.change-phone-btn {
  font-size: 24rpx;
  color: #667eea;
  background: transparent;
  border: 1rpx solid #667eea;
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  margin: 0;
}

.change-phone-btn::after {
  border: none;
}

/* 输入区域 */
.input-section {
  margin-bottom: 60rpx;
}

.input-group {
  margin-bottom: 24rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.phone-input,
.code-input {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #e1e5e9;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #333;
  background: #fafbfc;
  box-sizing: border-box;
}

.phone-input:focus,
.code-input:focus {
  border-color: #667eea;
  background: white;
}

/* 验证码提示 */
.code-tips {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #666;
}

.resend-btn {
  font-size: 24rpx;
  color: #667eea;
  background: transparent;
  border: none;
  margin: 0;
  padding: 8rpx 0;
}

.resend-btn.disabled {
  color: #ccc;
}

.resend-btn::after {
  border: none;
}

/* 按钮样式 */
.action-section {
  text-align: center;
}

.primary-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
}

.primary-btn::after {
  border: none;
}

.primary-btn.disabled {
  background: #e1e5e9;
  color: #999;
}

.secondary-btn {
  width: 100%;
  height: 88rpx;
  background: transparent;
  color: #667eea;
  border: 2rpx solid #667eea;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin: 20rpx 0 0 0;
}

.secondary-btn::after {
  border: none;
}

/* 已登录状态 */
.logged-in-section {
  background: white;
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.login-actions {
  margin-top: 60rpx;
}

/* 其他登录方式 */
.alternative-login {
  margin-top: 60rpx;
}

.divider {
  text-align: center;
  margin: 40rpx 0;
  position: relative;
}

.divider::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  height: 1rpx;
  background: rgba(255, 255, 255, 0.3);
}

.divider-text {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0 20rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  position: relative;
  z-index: 1;
}

.alt-buttons {
  display: flex;
  gap: 20rpx;
}

.alt-btn {
  flex: 1;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
  margin: 0;
}

.alt-btn::after {
  border: none;
}

.alt-btn-text {
  font-size: 28rpx;
  color: white;
}

/* 开发提示 */
.dev-tips {
  margin-top: auto;
  padding-top: 40rpx;
  text-align: center;
}

.dev-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}