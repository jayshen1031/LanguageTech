/* 用户注册页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
}

/* 登录部分 */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.welcome-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.app-logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.welcome-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 10rpx rgba(0,0,0,0.3);
}

.welcome-subtitle {
  font-size: 28rpx;
  color: rgba(255,255,255,0.8);
  text-align: center;
}

.login-card {
  background: white;
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  width: 100%;
  max-width: 600rpx;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.15);
}

.login-benefits {
  margin-bottom: 50rpx;
}

.benefit-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.benefit-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 40rpx;
}

.benefit-text {
  font-size: 28rpx;
  color: #333;
}

.wechat-login-btn {
  background: #07c160;
  color: white;
  border-radius: 50rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(7,193,96,0.3);
}

.wechat-icon {
  margin-right: 16rpx;
  font-size: 36rpx;
}

.skip-text {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  text-decoration: underline;
}

/* 资料完善部分 */
.profile-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.profile-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 30rpx;
  border: 6rpx solid rgba(255,255,255,0.3);
}

.profile-title {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 12rpx;
}

.profile-subtitle {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
}

.form-card {
  background: white;
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  width: 100%;
  max-width: 600rpx;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.15);
}

.form-group {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 600;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #eee;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: #fafafa;
}

.input:focus {
  border-color: #4A90E2;
  background: white;
}

.radio-list {
  display: flex;
  flex-direction: column;
}

.radio-list.horizontal {
  flex-direction: row;
  justify-content: space-between;
}

.radio-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #fafafa;
  border-radius: 10rpx;
}

.radio-list.horizontal .radio-item {
  margin-bottom: 0;
  flex: 1;
  margin-right: 20rpx;
  justify-content: center;
  padding: 20rpx 10rpx;
}

.radio-list.horizontal .radio-item:last-child {
  margin-right: 0;
}

.radio-text {
  margin-left: 16rpx;
  font-size: 26rpx;
  color: #333;
}

.slider-unit {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #666;
}

/* 服务条款确认 */
.terms-section {
  margin: 30rpx 0;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.checkbox-wrapper {
  display: flex;
  align-items: flex-start;
  flex-wrap: wrap;
  line-height: 1.6;
}

.checkbox-text {
  font-size: 26rpx;
  color: #666;
  margin-right: 8rpx;
}

.link-text {
  font-size: 26rpx;
  color: #4A90E2;
  text-decoration: underline;
  margin-right: 8rpx;
}

.complete-btn {
  background: linear-gradient(135deg, #4A90E2, #667eea);
  color: white;
  border-radius: 50rpx;
  height: 100rpx;
  font-size: 32rpx;
  margin-top: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(74,144,226,0.3);
}

.complete-btn[disabled] {
  background: #ccc !important;
  box-shadow: none !important;
  color: #999 !important;
}

/* 注册提示 */
.register-tips {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #fff3cd;
  border-radius: 12rpx;
  border-left: 4rpx solid #ffc107;
}

.tip-text {
  font-size: 24rpx;
  color: #856404;
  display: block;
  margin-bottom: 8rpx;
  line-height: 1.5;
}

.tip-text:last-child {
  margin-bottom: 0;
}

/* 资料管理部分 */
.profile-management {
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto;
}

.user-info-header {
  background: rgba(255,255,255,0.9);
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.user-avatar-large {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
  border: 4rpx solid #4A90E2;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-goal,
.user-level {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.profile-stats {
  background: rgba(255,255,255,0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #4A90E2;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #666;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: #eee;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.edit-profile-btn,
.logout-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.edit-profile-btn {
  background: #4A90E2;
  color: white;
}

.logout-btn {
  background: rgba(255,255,255,0.9);
  color: #666;
  border: 2rpx solid #eee;
}