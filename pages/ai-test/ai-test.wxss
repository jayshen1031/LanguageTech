/* AI测试页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

/* 输入区域 */
.input-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.input-textarea {
  width: 100%;
  min-height: 200rpx;
  font-size: 30rpx;
  line-height: 1.5;
  padding: 20rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.button-group {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  border-radius: 40rpx;
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.btn-secondary {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
}

/* 思维链显示 */
.thinking-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.toggle {
  font-size: 26rpx;
  color: #1890ff;
  padding: 10rpx 20rpx;
}

.thinking-content {
  background: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
}

.thinking-scroll {
  max-height: 400rpx;
}

.thinking-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  white-space: pre-wrap;
}

/* 结果显示 */
.result-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.result-content {
  font-size: 30rpx;
  line-height: 1.8;
  color: #333;
}

/* 流式输出动画 */
.streaming-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.streaming-indicator {
  display: flex;
  align-items: center;
}

.streaming-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  white-space: pre-wrap;
}

.cursor {
  width: 4rpx;
  height: 40rpx;
  background: #333;
  margin-left: 4rpx;
  animation: blink 1s infinite;
}

@keyframes blink {
  0%, 50% { opacity: 1; }
  51%, 100% { opacity: 0; }
}

/* 错误提示 */
.error-section {
  background: #fff2f0;
  border: 2rpx solid #ffccc7;
  border-radius: 8rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
}

.error-text {
  font-size: 28rpx;
  color: #ff4d4f;
}