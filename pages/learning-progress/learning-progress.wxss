/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 40rpx;
}

/* 认证提示 */
.auth-required {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  color: white;
}

.auth-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.auth-text {
  font-size: 32rpx;
  opacity: 0.9;
}

/* 顶部总览 */
.header-overview {
  padding: 40rpx 30rpx;
  color: white;
}

.overview-stats {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-item.highlight {
  color: #FFD700;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 20rpx;
}

/* 今日进度卡片 */
.today-progress {
  margin: 0 30rpx 40rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.card-date {
  font-size: 24rpx;
  color: #4CAF50;
  background: #E8F5E8;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.progress-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
}

.progress-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.progress-icon {
  font-size: 48rpx;
}

.progress-content {
  display: flex;
  flex-direction: column;
}

.progress-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.progress-label {
  font-size: 24rpx;
  color: #666;
}

/* 标签页 */
.tab-bar {
  display: flex;
  background: white;
  margin: 0 30rpx;
  border-radius: 16rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #667eea;
  color: white;
}

.tab-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 时间线容器 */
.timeline-container {
  padding: 0 30rpx;
}

.timeline {
  position: relative;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 30rpx;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: rgba(255, 255, 255, 0.3);
}

.timeline-day {
  position: relative;
  margin-bottom: 40rpx;
}

.timeline-day::before {
  content: '';
  position: absolute;
  left: 20rpx;
  top: 30rpx;
  width: 24rpx;
  height: 24rpx;
  background: #4CAF50;
  border-radius: 50%;
  border: 4rpx solid white;
  z-index: 1;
}

.day-header {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-left: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.day-info {
  display: flex;
  flex-direction: column;
}

.day-date {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.day-summary {
  font-size: 24rpx;
  color: #666;
}

.expand-icon {
  font-size: 24rpx;
  color: #999;
}

.day-activities {
  margin-left: 80rpx;
  margin-top: 20rpx;
  padding: 0 30rpx;
}

.activity-item {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-time {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  min-width: 80rpx;
}

.activity-content {
  flex: 1;
}

.activity-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.activity-type-icon {
  font-size: 32rpx;
}

.activity-title {
  font-size: 28rpx;
  font-weight: 500;
  color: white;
}

.activity-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 8rpx;
}

.activity-words {
  font-size: 22rpx;
  color: #4CAF50;
  background: rgba(76, 175, 80, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  display: inline-block;
}

/* 数据统计 */
.stats-container {
  padding: 0 30rpx;
}

.stats-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  display: block;
}

.week-chart {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.week-day {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.day-bar {
  height: 160rpx;
  display: flex;
  align-items: flex-end;
  margin-bottom: 12rpx;
}

.bar {
  width: 32rpx;
  background: #E0E0E0;
  border-radius: 4rpx;
  transition: all 0.3s ease;
}

.bar.active {
  background: linear-gradient(to top, #667eea, #764ba2);
}

.day-label {
  font-size: 20rpx;
  color: #999;
}

.week-summary {
  text-align: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #F0F0F0;
}

.summary-text {
  font-size: 24rpx;
  color: #666;
}

.distribution-stats {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.dist-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.dist-icon {
  font-size: 48rpx;
  width: 80rpx;
  text-align: center;
}

.dist-info {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.dist-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.dist-value {
  font-size: 24rpx;
  color: #666;
}

/* 成就徽章 */
.achievements-container {
  padding: 0 30rpx;
}

.achievements-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.achievement-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  position: relative;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.achievement-card.locked {
  opacity: 0.6;
  background: #F5F5F5;
}

.achievement-card.unlocked {
  border: 2rpx solid #4CAF50;
}

.achievement-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.achievement-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.achievement-desc {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.achievement-progress {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.progress-bar {
  height: 8rpx;
  background: #E0E0E0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(to right, #4CAF50, #66BB6A);
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 20rpx;
  color: #999;
  text-align: center;
}

.unlocked-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background: #4CAF50;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16rpx;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  color: white;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  margin-bottom: 16rpx;
  opacity: 0.9;
}

.empty-desc {
  font-size: 24rpx;
  opacity: 0.7;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

.loading-text {
  color: white;
  font-size: 28rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}