.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.study-days {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.today-status {
  display: flex;
  align-items: center;
}

.status-text {
  font-size: 24rpx;
  color: #666;
  margin-right: 12rpx;
}

.status-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ddd;
}

.status-icon.completed {
  background-color: #4A90E2;
  border-color: #4A90E2;
  color: #fff;
}

/* 学习进度 */
.progress-section {
  margin-bottom: 0;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.progress-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.progress-bar-container {
  display: flex;
  align-items: center;
}

.progress-bar {
  flex: 1;
  height: 12rpx;
  background-color: #e0e0e0;
  border-radius: 6rpx;
  overflow: hidden;
  margin-right: 16rpx;
}

.progress-fill {
  height: 100%;
  background-color: #4A90E2;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #4A90E2;
  min-width: 60rpx;
  text-align: right;
}

/* 任务列表 */
.task-section {
  margin-bottom: 0;
}

.task-list {
  margin-top: 20rpx;
}

.task-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
}

.task-item:last-child {
  border-bottom: none;
}

.task-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
}

.task-icon.learn {
  background-color: #FFF2CC;
}

.task-icon.review {
  background-color: #D9E2F3;
}

.task-icon.dialogue {
  background-color: #D4E6D4;
}

.task-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.task-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.task-desc {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.task-arrow {
  font-size: 36rpx;
  color: #ccc;
}

/* 快捷入口 */
.quick-entry {
  padding: 20rpx;
}

.quick-entry .btn-primary {
  width: 100%;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}