/* 页面容器 */
.container {
  min-height: 100vh;
  background: #f5f6fa;
  position: relative;
  padding-bottom: 20rpx;
}

/* 登录提示样式 */
.login-prompt-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
}

.login-prompt-card {
  background: white;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.15);
  max-width: 500rpx;
  width: 100%;
}

.prompt-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.prompt-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.prompt-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.prompt-benefits {
  text-align: left;
  margin-bottom: 50rpx;
}

.benefit-item {
  display: block;
  font-size: 26rpx;
  color: #555;
  margin-bottom: 12rpx;
  line-height: 1.5;
}

.login-btn {
  background: linear-gradient(135deg, #4A90E2, #667eea);
  color: white;
  border-radius: 50rpx;
  height: 90rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(74,144,226,0.3);
}

/* 顶部背景装饰 */
.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 400rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  overflow: hidden;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-1 {
  width: 300rpx;
  height: 300rpx;
  top: -100rpx;
  right: -50rpx;
}

.circle-2 {
  width: 200rpx;
  height: 200rpx;
  bottom: 50rpx;
  left: -80rpx;
}

/* 用户信息区 */
.user-section {
  position: relative;
  display: flex;
  align-items: center;
  padding: 60rpx 15rpx 30rpx;
  color: #fff;
  margin: 20rpx 15rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.clickable-section:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.98);
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  overflow: hidden;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.avatar-icon {
  font-size: 50rpx;
  color: #fff;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.user-subtitle {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.quick-stats {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.goto-arrow {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-left: 10rpx;
}

.badge {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.badge.clickable {
  cursor: pointer;
}

.badge.clickable:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.badge.completed {
  background: rgba(82, 196, 26, 0.3);
}

.badge-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

/* 学习仪表板 */
.dashboard {
  margin: 20rpx 15rpx 30rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

.dashboard-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.dashboard-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.dashboard-subtitle {
  font-size: 24rpx;
  color: #666;
}

.data-overview {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}

.overview-item {
  flex: 1;
  text-align: center;
  padding: 15rpx 5rpx;
  transition: all 0.3s ease;
  position: relative;
}

.vocab-manage-btn {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  background: rgba(74, 144, 226, 0.1);
  color: #4a90e2;
  font-size: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.vocab-manage-btn:active {
  background: rgba(74, 144, 226, 0.2);
  transform: scale(0.9);
}

.overview-item:active {
  transform: scale(0.95);
}

.overview-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #667eea;
  display: block;
  margin-bottom: 8rpx;
}

.overview-label {
  font-size: 24rpx;
  color: #333;
  display: block;
  margin-bottom: 4rpx;
}

.overview-detail {
  font-size: 22rpx;
  color: #666;
  line-height: 1.3;
}

.overview-divider {
  width: 2rpx;
  height: 60rpx;
  background: #f0f0f0;
  margin: 0 20rpx;
}

/* 今日学习 */
.today-learning {
  margin: 0 15rpx 30rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.learning-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.learning-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.learning-config {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: #f8f9fa;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.learning-config:active {
  background: #e9ecef;
}

.config-text {
  font-size: 22rpx;
  color: #666;
}

.config-icon {
  font-size: 20rpx;
}

/* 学习项目列表 */
.learning-items {
  margin-bottom: 20rpx;
}

.learning-item {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.3s ease;
}

.learning-item:active {
  transform: scale(0.98);
  background: #e9ecef;
}

.learning-item.vocabulary {
  border-left: 4rpx solid #667eea;
}

.learning-item.structure {
  border-left: 4rpx solid #9c27b0;
}

.item-header {
  display: flex;
  align-items: center;
  flex: 1;
}

.item-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.item-info {
  flex: 1;
}

.item-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 4rpx;
}

.item-desc {
  font-size: 22rpx;
  color: #666;
}

.item-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.action-text {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 500;
}

.action-arrow {
  font-size: 20rpx;
  color: #667eea;
}

/* 智能学习按钮 */
.smart-learning-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.3s ease;
}

.smart-learning-btn:active {
  transform: scale(0.98);
}

.smart-content {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.smart-icon {
  font-size: 48rpx;
}

.smart-text {
  display: flex;
  flex-direction: column;
}

.smart-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 4rpx;
}

.smart-desc {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

.smart-arrow {
  font-size: 28rpx;
  color: white;
}

/* 快捷功能区 */
.quick-functions {
  margin: 0 15rpx 30rpx;
}

.section-header {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.quick-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx;
}

.quick-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.quick-card.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.quick-card:active {
  transform: scale(0.95);
}

.quick-icon {
  font-size: 36rpx;
  margin-bottom: 12rpx;
}

.quick-title {
  font-size: 22rpx;
  font-weight: bold;
  margin-bottom: 4rpx;
}

.quick-desc {
  font-size: 18rpx;
  opacity: 0.7;
}

/* 学习数据卡片 */
.stats-card {
  margin: -20rpx 15rpx 20rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx 15rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.08);
  position: relative;
}

.stats-item {
  text-align: center;
  flex: 1;
  padding: 10rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.stats-item:active {
  background: #f8f9fa;
  transform: scale(0.95);
}

.stats-header {
  text-align: center;
  padding-bottom: 15rpx;
  margin-bottom: 15rpx;
  border-bottom: 1px solid #f0f0f0;
}

.stats-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}


.stats-row {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.stats-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #1a1a1a;
  display: block;
  margin-bottom: 10rpx;
}

.stats-item.primary .stats-value {
  color: #667eea;
}

.stats-label {
  font-size: 26rpx;
  color: #999;
}

.stats-divider {
  width: 1rpx;
  height: 60rpx;
  background: #eee;
}

/* 快速学习入口 */
.quick-actions {
  margin: 0 15rpx 20rpx;
  display: flex;
  gap: 10rpx;
}

.action-card {
  flex: 1;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.action-card:active {
  transform: scale(0.98);
}

.action-card.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.action-card.secondary {
  background: #fff;
  border: 2rpx solid #f0f0f0;
}

.action-header {
  flex: 1;
}

.action-title {
  font-size: 30rpx;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.action-count {
  font-size: 24rpx;
  opacity: 0.8;
}

.action-card.secondary .action-title {
  color: #1a1a1a;
}

.action-card.secondary .action-count {
  color: #999;
}

.action-icon {
  font-size: 50rpx;
  margin-left: 20rpx;
}

/* 功能模块网格 */
.features-section {
  margin: 0 0 20rpx;
  padding: 0;
}

.features-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 15rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.grid-options {
  display: flex;
  background: #f0f0f0;
  border-radius: 20rpx;
  padding: 4rpx;
}

.grid-option {
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  color: #666;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.grid-option.active {
  background: #667eea;
  color: #fff;
}

.features-grid {
  display: grid;
  gap: 1rpx;
  transition: all 0.3s ease;
  width: 100vw;
  margin-left: calc(-50vw + 50%);
  padding: 0;
}

/* 3列布局 */
.grid-cols-3 {
  grid-template-columns: repeat(3, 1fr);
}

/* 4列布局（默认） */
.grid-cols-4 {
  grid-template-columns: repeat(4, 1fr);
}

/* 5列布局 */
.grid-cols-5 {
  grid-template-columns: repeat(5, 1fr);
}

.feature-card {
  background: #fff;
  border-radius: 0;
  text-align: center;
  border-right: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s;
  display: flex;
  flex-direction: column;
  align-items: center;
  aspect-ratio: 1;
  justify-content: center;
}

/* 3列布局的边框 */
.grid-cols-3 .feature-card:nth-child(3n) {
  border-right: none;
}

/* 4列布局的边框 */
.grid-cols-4 .feature-card:nth-child(4n) {
  border-right: none;
}

/* 5列布局的边框 */
.grid-cols-5 .feature-card:nth-child(5n) {
  border-right: none;
}


.feature-card:active {
  background: #f8f9fa;
  transform: scale(0.98);
}

/* 根据列数调整卡片内边距和图标大小 */
.grid-cols-3 .feature-card {
  padding: 20rpx 10rpx;
}

.grid-cols-4 .feature-card {
  padding: 16rpx 6rpx;
}

.grid-cols-5 .feature-card {
  padding: 12rpx 4rpx;
}

.feature-icon {
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

/* 根据列数调整图标大小 */
.grid-cols-3 .feature-icon {
  width: 70rpx;
  height: 70rpx;
  font-size: 36rpx;
}

.grid-cols-4 .feature-icon {
  width: 60rpx;
  height: 60rpx;
  font-size: 32rpx;
}

.grid-cols-5 .feature-icon {
  width: 50rpx;
  height: 50rpx;
  font-size: 28rpx;
}

.feature-icon.hiragana {
  background: #ffeef2;
  color: #e91e63;
  font-weight: bold;
}

.feature-icon.katakana {
  background: #f3e5f5;
  color: #9c27b0;
  font-weight: bold;
}

.feature-icon.kana-merged {
  background: linear-gradient(135deg, #e91e63 0%, #9c27b0 100%);
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
}

.feature-icon.grammar {
  background: #f3e5f5;
  color: #9c27b0;
}

.feature-icon.ai {
  background: #e3f2fd;
  color: #2196f3;
}

.feature-icon.dialogue {
  background: #e8f5e9;
  color: #4caf50;
}


.feature-icon.review {
  background: #e3f2fd;
  color: #2196f3;
}

.feature-icon.stats {
  background: #f3e5f5;
  color: #9c27b0;
}

.feature-icon.parser {
  background: #e0f2f1;
  color: #00897b;
}

.feature-icon.grammar-lib {
  background: linear-gradient(135deg, #9b59b6 0%, #8e44ad 100%);
}

.feature-icon.more {
  background: #f5f5f5;
  color: #999;
  font-weight: bold;
}

.feature-icon.management {
  background: #e3f2fd;
  color: #1976d2;
}

.feature-icon.clean {
  background: #ffe6e6;
  color: #e74c3c;
}

.feature-name {
  color: #333;
  line-height: 1.2;
}

/* 根据列数调整文字大小 */
.grid-cols-3 .feature-name {
  font-size: 24rpx;
}

.grid-cols-4 .feature-name {
  font-size: 22rpx;
}

.grid-cols-5 .feature-name {
  font-size: 20rpx;
}

/* 管理工具区 */
.admin-section {
  margin: 0 15rpx 20rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.06);
}

.admin-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.dev-badge {
  background: #ff6b6b;
  color: #fff;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 10rpx;
  font-weight: 500;
}

.admin-actions {
  display: flex;
  gap: 10rpx;
}

.admin-btn {
  flex: 1;
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 26rpx;
  color: #495057;
  display: flex;
  align-items: center;
  justify-content: center;
}

.admin-btn::after {
  display: none;
}

.admin-btn:active {
  background: #e9ecef;
}

/* 学习计划样式 */
.learning-plan {
  margin: 30rpx 15rpx 40rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 0;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.plan-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f5f6fa;
}

.plan-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

/* 学习计划说明 */
.plan-summary {
  padding: 20rpx 30rpx;
  background: #f8f9fa;
  margin: 0 30rpx 20rpx;
  border-radius: 16rpx;
  text-align: center;
}

.summary-text {
  display: block;
  font-size: 28rpx;
  color: #495057;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.summary-ratio {
  font-size: 24rpx;
  color: #6c757d;
  font-weight: 500;
}

.plan-settings {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background: #f5f6fa;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.settings-text {
  margin-right: 8rpx;
  font-weight: 500;
}

.settings-icon {
  font-size: 26rpx;
}

/* 学习计划卡片 */
.plan-cards {
  display: flex;
  padding: 20rpx 30rpx;
  gap: 20rpx;
}

.plan-card {
  flex: 1;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 30rpx 24rpx;
  color: #fff;
  position: relative;
  overflow: hidden;
}

.plan-card.new-words {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.plan-card.review-words {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.plan-card::before {
  content: '';
  position: absolute;
  top: -50rpx;
  right: -50rpx;
  width: 100rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 26rpx;
  font-weight: 500;
  opacity: 0.9;
}

.card-icon {
  font-size: 32rpx;
}

.card-count {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  line-height: 1;
}

.card-desc {
  font-size: 22rpx;
  opacity: 0.8;
}

/* 智能学习按钮 */
.smart-plan-btn {
  margin: 0 30rpx 30rpx;
  background: linear-gradient(135deg, #36d1dc 0%, #5b86e5 100%);
  border-radius: 20rpx;
  padding: 24rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #fff;
