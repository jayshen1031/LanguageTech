<view class="container">
  <!-- 顶部用户信息 -->
  <view class="user-section card">
    <view class="user-info">
      <image class="avatar" src="{{userInfo.avatarUrl || '/images/default-avatar.png'}}" mode="aspectFill"></image>
      <view class="user-details">
        <text class="username">{{userInfo.nickName || '语伴君用户'}}</text>
        <text class="study-days">已坚持学习 {{studyDays}} 天</text>
      </view>
    </view>
    <view class="today-status">
      <text class="status-text">今日{{todayCompleted ? '已' : '未'}}完成</text>
      <view class="status-icon {{todayCompleted ? 'completed' : ''}}">
        <text>✓</text>
      </view>
    </view>
  </view>

  <!-- 学习进度 -->
  <view class="progress-section card">
    <view class="progress-header">
      <text class="title-h3">学习进度</text>
      <text class="text-small text-secondary">本周</text>
    </view>
    <view class="progress-stats">
      <view class="stat-item">
        <text class="stat-value">{{totalWords}}</text>
        <text class="stat-label">总词汇</text>
      </view>
      <view class="stat-item">
        <text class="stat-value text-primary">{{masteredWords}}</text>
        <text class="stat-label">已掌握</text>
      </view>
      <view class="stat-item">
        <text class="stat-value">{{todayWords}}</text>
        <text class="stat-label">今日新词</text>
      </view>
    </view>
    <view class="progress-bar-container">
      <view class="progress-bar">
        <view class="progress-fill" style="width: {{progressPercent}}%"></view>
      </view>
      <text class="progress-text">{{progressPercent}}%</text>
    </view>
  </view>

  <!-- 今日任务 -->
  <view class="task-section card">
    <text class="title-h3">今日任务</text>
    <view class="task-list">
      <view class="task-item" bindtap="goToLearn">
        <view class="task-icon learn">
          <text>📚</text>
        </view>
        <view class="task-info">
          <text class="task-title">新词学习</text>
          <text class="task-desc">{{todayWords}} 个新词待学习</text>
        </view>
        <view class="task-arrow">›</view>
      </view>
      
      <view class="task-item" bindtap="goToReview">
        <view class="task-icon review">
          <text>🔄</text>
        </view>
        <view class="task-info">
          <text class="task-title">复习巩固</text>
          <text class="task-desc">{{reviewCount}} 个词汇待复习</text>
        </view>
        <view class="task-arrow">›</view>
      </view>
      
      <view class="task-item" bindtap="goToDialogue">
        <view class="task-icon dialogue">
          <text>💬</text>
        </view>
        <view class="task-info">
          <text class="task-title">对话练习</text>
          <text class="task-desc">AI陪练等你来聊</text>
        </view>
        <view class="task-arrow">›</view>
      </view>
    </view>
  </view>

  <!-- 快捷入口 -->
  <view class="quick-entry">
    <button class="btn-primary" bindtap="goToAIGrammar">AI语法讲解</button>
  </view>
</view>