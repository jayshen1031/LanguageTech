.todo-container {
  min-height: 100vh;
  background: #f5f5f5;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1px solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.add-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background: #4CAF50;
  color: #fff;
  border-radius: 20rpx;
  font-size: 28rpx;
}

.add-btn .icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.search-bar {
  display: flex;
  padding: 20rpx 30rpx;
  background: #fff;
}

.search-input {
  flex: 1;
  height: 70rpx;
  padding: 0 20rpx;
  border: 1px solid #ddd;
  border-radius: 35rpx;
  font-size: 28rpx;
}

.search-btn {
  margin-left: 20rpx;
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #2196F3;
  color: #fff;
  border-radius: 35rpx;
  font-size: 28rpx;
}

.filter-tabs {
  display: flex;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1px solid #eee;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 20rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: #2196F3;
  color: #fff;
}

.todo-list {
  height: calc(100vh - 380rpx);
  padding: 20rpx;
}

.todo-item {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.todo-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.todo-title-line {
  display: flex;
  align-items: center;
  flex: 1;
}

.status-indicator {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  margin-right: 15rpx;
  cursor: pointer;
  transition: all 0.3s;
}

.status-indicator.pending {
  background: #FFC107;
  border: 3rpx solid #FFA000;
}

.status-indicator.in_progress {
  background: #2196F3;
  border: 3rpx solid #1976D2;
}

.status-indicator.completed {
  background: #4CAF50;
  border: 3rpx solid #388E3C;
}

.todo-title {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.priority-tag {
  padding: 5rpx 15rpx;
  border-radius: 15rpx;
  font-size: 24rpx;
  margin-left: 15rpx;
}

.priority-1 {
  background: #ffebee;
  color: #c62828;
}

.priority-2 {
  background: #fff3e0;
  color: #e65100;
}

.priority-3 {
  background: #e3f2fd;
  color: #1565c0;
}

.priority-4 {
  background: #f1f8e9;
  color: #558b2f;
}

.todo-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  padding: 8rpx 20rpx;
  border-radius: 15rpx;
  font-size: 24rpx;
  color: #2196F3;
  background: #e3f2fd;
}

.action-btn.delete {
  color: #f44336;
  background: #ffebee;
}

.todo-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 15rpx;
}

.todo-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.todo-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  padding: 5rpx 15rpx;
  background: #f0f0f0;
  color: #666;
  border-radius: 10rpx;
  font-size: 24rpx;
}

.todo-date {
  font-size: 24rpx;
  color: #999;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 32rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #eee;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.modal-body {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.input, .textarea, .picker {
  width: 100%;
  padding: 20rpx;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.textarea {
  height: 150rpx;
  resize: none;
}

.picker {
  background: #fff;
  color: #333;
}

.modal-footer {
  display: flex;
  padding: 30rpx;
  border-top: 1px solid #eee;
  gap: 20rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 32rpx;
  border: none;
}

.btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.btn.confirm {
  background: #4CAF50;
  color: #fff;
}