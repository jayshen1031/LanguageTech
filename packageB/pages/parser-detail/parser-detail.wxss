/* pages/parser-detail/parser-detail.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 详情内容 */
.detail-content {
  padding-bottom: 120rpx;
}

/* 头部信息 */
.header-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.input-method-tag {
  font-size: 24rpx;
  color: #4a90e2;
  padding: 8rpx 16rpx;
  background-color: rgba(74, 144, 226, 0.1);
  border-radius: 20rpx;
}

.create-time {
  font-size: 24rpx;
  color: #999;
}

/* 原始输入 */
.original-input {
  background-color: #fff;
  padding: 24rpx;
  margin-top: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.input-text {
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
  padding: 16rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

/* 原始图片 */
.original-image {
  width: 100%;
  margin-top: 16rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 解析结果 */
.analysis-results {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.copy-all-btn {
  font-size: 26rpx;
  color: #4a90e2;
  padding: 8rpx 20rpx;
  border: 1rpx solid #4a90e2;
  border-radius: 20rpx;
}

/* 句子项 */
.sentence-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
}

.sentence-item:last-child {
  border-bottom: none;
}

.sentence-header {
  margin-bottom: 16rpx;
}

.sentence-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #4a90e2;
}

/* 结果行 */
.result-row {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  position: relative;
  padding-right: 80rpx;
}

.label {
  font-size: 26rpx;
  color: #999;
  width: 120rpx;
  flex-shrink: 0;
}

.value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  line-height: 1.6;
}

.japanese-text {
  font-size: 32rpx;
  font-weight: 500;
}

.romaji-text {
  color: #666;
  font-style: italic;
}

.copy-btn {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 24rpx;
  color: #4a90e2;
  padding: 4rpx 12rpx;
  border: 1rpx solid #4a90e2;
  border-radius: 12rpx;
}

/* 分析部分 */
.analysis-section,
.grammar-section,
.vocabulary-section {
  margin-top: 20rpx;
  padding: 16rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.sub-label {
  font-size: 26rpx;
  font-weight: bold;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
}

.analysis-text,
.grammar-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.8;
  white-space: pre-wrap;
}

/* 词汇列表 */
.vocabulary-list {
  margin-top: 12rpx;
}

.vocabulary-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 8rpx 0;
  border-bottom: 1rpx dashed #ddd;
}

.vocabulary-item:last-child {
  border-bottom: none;
}

.word-japanese {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  min-width: 100rpx;
}

.word-romaji {
  font-size: 24rpx;
  color: #666;
  font-style: italic;
}

.word-chinese {
  font-size: 26rpx;
  color: #555;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.btn-back {
  width: 100%;
  height: 80rpx;
  background-color: #4a90e2;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 掌握度报告 */
.mastery-report-toggle {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.report-btn {
  font-size: 30rpx;
  color: #4a90e2;
  font-weight: 500;
}

.mastery-report {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.report-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.stat-item {
  margin-bottom: 24rpx;
}

.stat-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}

.stat-bar {
  height: 20rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  overflow: hidden;
  display: flex;
  margin-bottom: 8rpx;
}

.bar-segment {
  height: 100%;
}

.bar-segment.unseen { background-color: #e0e0e0; }
.bar-segment.unfamiliar { background-color: #ff9800; }
.bar-segment.partial { background-color: #2196f3; }
.bar-segment.mastered { background-color: #4caf50; }

.stat-legend {
  display: flex;
  justify-content: space-around;
  font-size: 22rpx;
}

.legend-item {
  color: #666;
}

.legend-item.unseen { color: #999; }
.legend-item.unfamiliar { color: #ff9800; }
.legend-item.partial { color: #2196f3; }
.legend-item.mastered { color: #4caf50; }

/* 掌握程度按钮 */
.sentence-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.mastery-buttons {
  display: flex;
  gap: 8rpx;
}

.mastery-btn {
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  background-color: #f0f0f0;
  color: #666;
}

.mastery-btn.mini {
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  margin-left: 8rpx;
}

.grammar-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 掌握程度背景色 */
.mastery-level-0 { /* 未看 - 灰色 */
  background-color: rgba(224, 224, 224, 0.3);
}

.mastery-level-1 { /* 未掌握 - 橙色 */
  background-color: rgba(255, 152, 0, 0.2);
}

.mastery-level-2 { /* 略懂 - 蓝色 */
  background-color: rgba(33, 150, 243, 0.2);
}

.mastery-level-3 { /* 掌握 - 绿色 */
  background-color: rgba(76, 175, 80, 0.2);
}

/* 句子项背景色调整 */
.sentence-item {
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.grammar-section, .vocabulary-item {
  border-radius: 8rpx;
  padding: 12rpx;
  margin: 8rpx 0;
}

/* 语法列表样式 */
.grammar-list {
  margin-top: 8rpx;
}

.grammar-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx;
  margin: 8rpx 0;
  border-radius: 8rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.grammar-item:last-child {
  border-bottom: none;
}