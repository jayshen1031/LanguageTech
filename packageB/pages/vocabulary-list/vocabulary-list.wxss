/* pages/vocabulary-list/vocabulary-list.wxss */

.container {
  padding: 0;
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 页面头部 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx 30rpx 40rpx;
  color: white;
}

.title-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.page-title {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.word-count {
  font-size: 28rpx;
  opacity: 0.8;
  margin-bottom: 10rpx;
}

.load-hint {
  font-size: 24rpx;
  opacity: 0.7;
  margin-bottom: 15rpx;
  display: block;
}

.load-all-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  margin-top: 10rpx;
}

/* 词汇列表 */
.vocabulary-list {
  height: calc(100vh - 200rpx);
  padding: 20rpx;
}

.vocabulary-item {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.vocabulary-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 词汇基本信息 */
.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.item-main {
  flex: 1;
}

.word {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  display: block;
  margin-bottom: 8rpx;
}

.reading {
  font-size: 28rpx;
  color: #7f8c8d;
  font-style: italic;
}

.item-status {
  margin-left: 20rpx;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.status-badge.mastered {
  background: #e8f5e8;
  color: #27ae60;
}

.status-badge.learning {
  background: #fff3cd;
  color: #f39c12;
}

/* 含义 */
.item-meaning {
  margin-bottom: 20rpx;
}

.meaning-text {
  font-size: 30rpx;
  color: #34495e;
  line-height: 1.5;
}

/* 统计信息 */
.item-stats {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #95a5a6;
  background: #f8f9fa;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

/* 操作按钮 */
.item-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  padding: 16rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  border: none;
  font-weight: 500;
}

.play-btn {
  background: #e3f2fd;
  color: #1976d2;
}

.detail-btn {
  background: #f3e5f5;
  color: #7b1fa2;
}

.action-btn:active {
  opacity: 0.7;
}

/* 加载状态 */
.loading, .no-more {
  text-align: center;
  padding: 40rpx;
  color: #95a5a6;
  font-size: 28rpx;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #95a5a6;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #7f8c8d;
  display: block;
  margin-bottom: 20rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: #95a5a6;
  display: block;
  margin-bottom: 40rpx;
}

.empty-action {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 30rpx;
}

/* 详情弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  margin: 40rpx;
  max-height: 80vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
}

.modal-close {
  font-size: 40rpx;
  color: #95a5a6;
  padding: 10rpx;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}

/* 词汇信息 */
.word-info {
  text-align: center;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.word-main {
  font-size: 48rpx;
  font-weight: bold;
  color: #2c3e50;
  display: block;
  margin-bottom: 10rpx;
}

.word-reading {
  font-size: 32rpx;
  color: #7f8c8d;
  font-style: italic;
  display: block;
  margin-bottom: 15rpx;
}

.word-meaning {
  font-size: 34rpx;
  color: #34495e;
  display: block;
}

/* 统计信息 */
.word-stats {
  margin-bottom: 30rpx;
}

.stat-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1px solid #f8f9fa;
}

.stat-row:last-child {
  border-bottom: none;
}

.stat-label {
  font-size: 28rpx;
  color: #7f8c8d;
}

.stat-value {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

.stat-value.mastered {
  color: #27ae60;
}

.stat-value.learning {
  color: #f39c12;
}

/* 例句区域 */
.examples-section, .tags-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2c3e50;
  display: block;
  margin-bottom: 20rpx;
}

.example-item {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 15rpx;
  position: relative;
}

.example-jp {
  font-size: 28rpx;
  color: #2c3e50;
  display: block;
  margin-bottom: 10rpx;
  padding-right: 60rpx;
}

.example-cn {
  font-size: 26rpx;
  color: #7f8c8d;
  display: block;
}

.play-example {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: #e3f2fd;
  color: #1976d2;
  border: none;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 标签 */
.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  background: #e8f5e8;
  color: #27ae60;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 弹窗底部 */
.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1px solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  border: none;
}

.modal-btn.play-btn {
  background: #e3f2fd;
  color: #1976d2;
}

.modal-btn.close-btn {
  background: #f5f5f5;
  color: #666;
}