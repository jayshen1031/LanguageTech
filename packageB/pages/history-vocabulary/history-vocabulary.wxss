/* pages/history-vocabulary/history-vocabulary.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 词汇表内容 */
.vocab-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-bottom: 120rpx;
}

/* 头部工具栏 */
.header-toolbar {
  background-color: #fff;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.search-bar {
  margin-bottom: 16rpx;
}

.search-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background-color: #f8f8f8;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #333;
}

.stats-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.total-count {
  font-size: 24rpx;
  color: #666;
}

.selected-count {
  font-size: 24rpx;
  color: #4a90e2;
  font-weight: 500;
}

/* 操作栏 */
.action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 16rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.btn-select-all {
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  color: #4a90e2;
  border: 1rpx solid #4a90e2;
  border-radius: 20rpx;
  background-color: #fff;
}

.btn-select-all.active {
  background-color: #4a90e2;
  color: #fff;
}

.btn-add-to-study {
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  color: #fff;
  background-color: #667eea;
  border-radius: 20rpx;
}

.btn-add-to-study.disabled {
  background-color: #ccc;
  color: #999;
}

/* 词汇列表 */
.vocab-list {
  flex: 1;
  padding: 20rpx;
}

.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 词汇项 */
.vocab-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.vocab-checkbox {
  margin-right: 20rpx;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.checkbox.checked {
  background-color: #4a90e2;
  border-color: #4a90e2;
}

.check-icon {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

.vocab-info {
  flex: 1;
}

.vocab-main {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.japanese-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.chinese-text {
  font-size: 28rpx;
  color: #666;
}

.vocab-sub {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.romaji-text {
  font-size: 24rpx;
  color: #999;
  font-style: italic;
}

.status-tag {
  font-size: 22rpx;
  color: #52c41a;
  padding: 4rpx 12rpx;
  background-color: rgba(82, 196, 26, 0.1);
  border-radius: 12rpx;
}

/* 出处信息 */
.vocab-sources {
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid #f0f0f0;
}

.sources-label {
  font-size: 22rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.sources-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 4rpx;
}

.source-item {
  display: flex;
  align-items: center;
  gap: 4rpx;
  background-color: #f8f9fa;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
}

.source-title {
  color: #4a90e2;
  font-weight: 500;
  max-width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.source-detail {
  color: #666;
}

.sources-count {
  font-size: 20rpx;
  color: #999;
  font-style: italic;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
  display: flex;
  gap: 20rpx;
}

.btn-back {
  flex: 1;
  height: 80rpx;
  background-color: #f5f5f5;
  color: #666;
  font-size: 28rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-add-selected {
  flex: 2;
  height: 80rpx;
  background-color: #4a90e2;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 500;
}

.btn-add-selected.disabled {
  background-color: #ccc;
  color: #999;
}