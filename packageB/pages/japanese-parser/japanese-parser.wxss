/* 日语解析页面 - 简洁全屏样式 */

/* 覆盖全局样式 */
.container {
  height: 100vh !important;
  width: 100% !important;
  margin: 0 !important;
  padding: 0 !important;
  display: flex !important;
  flex-direction: column !important;
  background: #fff !important;
  align-items: stretch !important;
  justify-content: flex-start !important;
}

/* 顶部标题 */
.header-simple {
  background: #667eea;
  padding: 20rpx;
  flex-shrink: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #fff;
}

.history-btn {
  font-size: 28rpx;
  color: #fff;
  padding: 10rpx 20rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 20rpx;
}

/* 主内容区 */
.main-content {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 输入方式切换 */
.method-switch {
  display: flex;
  background: #f5f6f8;
  border-radius: 8rpx;
  padding: 4rpx;
  margin-bottom: 20rpx;
}

.method-btn {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 6rpx;
}

.method-btn.active {
  background: #667eea;
  color: #fff;
}

/* 输入区域 */
.input-area {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.text-mode {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.text-input {
  width: 100%;
  flex: 1;
  padding: 20rpx;
  background: #f8f9fb;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.image-mode {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.upload-box {
  flex: 1;
  background: #f8f9fb;
  border: 2rpx dashed #667eea;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  font-size: 60rpx;
  color: #667eea;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #666;
}

.image-container {
  flex: 1;
  position: relative;
  background: #f8f9fb;
  border-radius: 8rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

/* 操作按钮 */
.action-bar {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.btn-analyze,
.btn-clear {
  border: none !important;
  margin: 0 !important;
  padding: 0 !important;
  box-sizing: border-box !important;
}

.btn-analyze {
  flex: 1;
  height: 88rpx;
  background: #667eea !important;
  color: #fff !important;
  font-size: 32rpx;
  border-radius: 8rpx;
}

.btn-analyze.disabled {
  background: #ccc !important;
}

.btn-analyze::after,
.btn-clear::after {
  display: none;
}

.btn-clear {
  width: 120rpx;
  height: 88rpx;
  background: #f5f6f8 !important;
  color: #666 !important;
  font-size: 28rpx;
  border-radius: 8rpx;
}

/* 文章标题 */
.article-title-container {
  padding: 20rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: -30rpx -30rpx 20rpx -30rpx;
  border-radius: 16rpx 16rpx 0 0;
}

.article-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  text-align: center;
  display: block;
}

/* 复习入口 */
.review-entry {
  margin-top: 20rpx;
}

.btn-review {
  width: 100%;
  height: 88rpx;
  background: #ff6b35 !important;
  color: #fff !important;
  font-size: 30rpx;
  border-radius: 8rpx;
  border: none !important;
  margin: 0 !important;
  padding: 0 !important;
}

.btn-review::after {
  display: none;
}

/* 结果显示 */
.result-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  display: flex;
  flex-direction: column;
  z-index: 100;
}

.result-header {
  background: #667eea;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.result-title {
  font-size: 36rpx;
  color: #fff;
}

.result-actions {
  display: flex;
  gap: 20rpx;
}

.save-btn {
  font-size: 28rpx;
  color: #4CAF50;
}

.copy-btn {
  font-size: 28rpx;
  color: #fff;
  padding: 10rpx 20rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 20rpx;
}

.result-content {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

/* 空状态 */
.empty-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.2;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
}

/* 其他必要样式 */
.placeholder {
  color: #bbb;
}

.input-footer {
  padding: 10rpx 0;
  text-align: right;
}

.char-count {
  font-size: 24rpx;
  color: #999;
}

.image-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,0.6);
  color: #fff;
  text-align: center;
  padding: 15rpx;
  font-size: 26rpx;
}

.image-tip {
  background: #e8f0ff;
  padding: 20rpx;
  margin-top: 20rpx;
  border-radius: 8rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #4a90e2;
  line-height: 1.6;
}

/* 时间格式化显示 */
.history-time {
  font-size: 24rpx;
  color: #999;
}

/* 结果样式 */
.result-flat {
  margin-bottom: 30rpx;
}

.result-row {
  display: flex;
  margin-bottom: 16rpx;
  align-items: flex-start;
}

.row-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
  width: 160rpx;
  flex-shrink: 0;
}

.row-value {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
  flex: 1;
  white-space: pre-wrap;
}

.result-actions {
  display: flex;
  gap: 20rpx;
}

.save-link {
  font-size: 26rpx;
  color: #667eea;
}

.japanese {
  font-size: 32rpx;
  font-weight: 500;
  color: #1a1a1a;
}

.romaji {
  color: #666;
  font-style: italic;
}

.translation {
  color: #2196f3;
}

.structure {
  color: #9c27b0;
  font-weight: 500;
}

.detail, .grammar {
  white-space: pre-wrap;
  line-height: 1.8;
}

.vocab-table-flat {
  flex: 1;
}

.vocab-row-flat {
  margin-bottom: 8rpx;
}

.vocab-cell {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
}

.result-divider {
  height: 1rpx;
  background: #f0f2f5;
  margin: 30rpx -20rpx;
}

/* 单词解析样式 */
.word-result {
  background: #f9fafb;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.japanese.large {
  font-size: 40rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.kana {
  font-size: 30rpx;
  color: #4a5568;
}

.part-of-speech {
  color: #e53e3e;
  font-weight: 500;
}

.meaning {
  font-size: 30rpx;
  color: #2d3748;
  line-height: 1.6;
}

.etymology {
  color: #718096;
  line-height: 1.6;
}

.collocation-list,
.example-list {
  margin-top: 10rpx;
}

.collocation-item,
.example-item {
  margin-bottom: 15rpx;
  padding-left: 20rpx;
}

.ex-jp {
  display: block;
  font-size: 28rpx;
  color: #2d3748;
  margin-bottom: 5rpx;
}

.ex-kana {
  display: block;
  font-size: 24rpx;
  color: #718096;
  margin-bottom: 5rpx;
}

.ex-cn {
  display: block;
  font-size: 26rpx;
  color: #4a5568;
}

.synonyms,
.antonyms {
  color: #4a5568;
}

.memory-tip {
  color: #38a169;
  line-height: 1.6;
  font-style: italic;
}

/* 历史记录样式 */
.history-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 200;
}

.history-container {
  width: 90%;
  height: 80%;
  background: #fff;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
}

.history-header {
  background: #667eea;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 12rpx 12rpx 0 0;
}

.history-title {
  font-size: 32rpx;
  color: #fff;
  font-weight: 500;
}

.close-btn {
  font-size: 40rpx;
  color: #fff;
  padding: 10rpx;
  line-height: 1;
}

.history-content {
  flex: 1;
  padding: 20rpx;
}

.empty-history {
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.history-item {
  border: 1rpx solid #f0f0f0;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.history-info {
  flex: 1;
  padding: 20rpx;
}

.history-text {
  margin-bottom: 10rpx;
}

.history-input {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-time {
  font-size: 24rpx;
  color: #999;
}

.history-preview {
  display: flex;
  align-items: center;
}

.sentence-count {
  font-size: 24rpx;
  color: #667eea;
  background: #f0f4ff;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
}

.history-actions {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  gap: 16rpx;
}

.action-btn {
  font-size: 28rpx;
  padding: 8rpx;
  text-align: center;
  border-radius: 4rpx;
  min-width: 60rpx;
}

.action-btn.favorite {
  color: #ccc;
}

.action-btn.favorite.active {
  color: #ffd700;
}

.action-btn.delete {
  color: #ff4757;
}