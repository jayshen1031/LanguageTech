/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 全局字体 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
  font-size: 28rpx;
  color: #333;
  background-color: #f5f5f5;
}

/* 通用卡片样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 主按钮样式 */
.btn-primary {
  background-color: #4A90E2;
  color: #fff;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.btn-primary:active {
  background-color: #357ABD;
}

/* 次要按钮样式 */
.btn-secondary {
  background-color: #fff;
  color: #4A90E2;
  border: 2rpx solid #4A90E2;
  border-radius: 50rpx;
  padding: 18rpx 58rpx;
  font-size: 32rpx;
  font-weight: 500;
}

/* 标题样式 */
.title-h1 {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.title-h2 {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.title-h3 {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

/* 文本样式 */
.text-primary {
  color: #4A90E2;
}

.text-secondary {
  color: #666;
}

.text-small {
  font-size: 24rpx;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #eee;
  margin: 20rpx 0;
}

/* 加载动画 */
.loading {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  border: 3rpx solid #4A90E2;
  border-radius: 50%;
  border-top-color: transparent;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}