/* pages/admin/import-n2.wxss */
.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  padding: 30rpx 0;
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

/* 状态卡片 */
.status-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.status-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.status-label {
  color: #666;
  font-size: 30rpx;
}

.status-value {
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
}

.status-value.importing {
  color: #07c160;
  animation: pulse 1.5s infinite;
}

.status-value.error {
  color: #ff4444;
}

@keyframes pulse {
  0% { opacity: 1; }
  50% { opacity: 0.6; }
  100% { opacity: 1; }
}

.progress-container {
  margin-top: 30rpx;
}

.segment-info {
  text-align: center;
  margin-top: 20rpx;
  color: #666;
  font-size: 26rpx;
}

/* 按钮组 */
.button-group {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.button-group button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.button-group button:last-child {
  margin-bottom: 0;
}

.btn-primary {
  background: #07c160;
  color: white;
}

.btn-primary[disabled] {
  background: #ccc;
}

.btn-secondary {
  background: #576b95;
  color: white;
}

.btn-danger {
  background: #ff4444;
  color: white;
}

.btn-back {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #666;
  color: white;
  border-radius: 40rpx;
  font-size: 30rpx;
}

/* 信息卡片 */
.info-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.info-content {
  display: flex;
  flex-direction: column;
}

.info-content text {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 10rpx;
}

/* 日志区域 */
.log-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.log-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.log-content {
  max-height: 400rpx;
  overflow-y: auto;
}

.log-item {
  display: flex;
  margin-bottom: 15rpx;
  font-size: 26rpx;
  line-height: 1.5;
}

.log-item.info {
  color: #333;
}

.log-item.warn {
  color: #ff9800;
}

.log-item.error {
  color: #ff4444;
}

.log-time {
  color: #999;
  margin-right: 10rpx;
  flex-shrink: 0;
}

.log-message {
  flex: 1;
  word-break: break-all;
}

/* 底部 */
.footer {
  display: flex;
  justify-content: center;
  padding: 30rpx 0 50rpx;
}